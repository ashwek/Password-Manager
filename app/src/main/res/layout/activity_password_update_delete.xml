<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nikhil.PasswordStoreModule.PasswordUpdateDeleteActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/colorPrimary">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Password"
            android:textFontWeight="50"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            />
        <ImageView
            android:id="@+id/delete"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:padding="10dp"
            android:src="@drawable/ic_delete"
            android:layout_alignParentEnd="true"/>

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:padding="12dp"
            android:layout_alignParentStart="true"
            android:onClick="backfunction"
            android:backgroundTint="@color/colorPrimary"
            android:hapticFeedbackEnabled="true"
            android:src="@drawable/ic_arrow_back">

        </ImageView>
    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="35dp"
            android:layoutMode="opticalBounds"
            >

            <TextView
                android:id="@+id/PassTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/darkblack"
                android:textStyle="bold"
                android:text="Details"
                android:layout_centerHorizontal="true"
                android:textSize="30dp"
                />

            <TextView
            android:id="@+id/Sitename"
            android:layout_width="120dp"
            android:textSize="20sp"
            android:layout_marginTop="20sp"
            android:layout_height="wrap_content"
            android:text="Site Name:"
            android:textStyle="bold"
            android:textColor="#777070"
            android:layout_below="@+id/PassTitle"
            />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/SitenameText"
                android:layout_marginTop="20sp"
                android:textSize="20sp"
                android:textColor="#777070"
                android:layout_below="@id/PassTitle"
                android:layout_toEndOf="@+id/Sitename"
                />
            <TextView
                android:id="@+id/Username"
                android:layout_width="120dp"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:text="User Name:"
                android:textColor="#777070"
                android:textStyle="bold"
                android:layout_below="@+id/Sitename"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/UsernameText"
                android:textSize="20sp"
                android:textColor="#777070"
                android:layout_below="@id/SitenameText"
                android:layout_toEndOf="@+id/Username"
                />

            <TextView
                android:id="@+id/Password"
                android:layout_width="120dp"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:text="Password:"
                android:textStyle="bold"
                android:textColor="#777070"
                android:layout_below="@+id/Username"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/PasswordText"
                android:textSize="20sp"
                android:textColor="#777070"
                android:layout_below="@id/UsernameText"
                android:layout_toEndOf="@+id/Password"
                />


            <TextView
                android:id="@+id/exNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#777070"
                android:layout_below="@+id/Password"
                android:text="Extra Notes:"/>
            <TextView
                android:id="@+id/extranote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:scrollbars="vertical"
                android:textColor="#777070"
                android:layout_below="@+id/exNote"
                android:height="80dp"
                />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:onClick="update"
                android:backgroundTint="@color/colorPrimary"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/ic_update"
                android:tint="@color/white"
                app:maxImageSize="35dp"

                />
        </RelativeLayout>

</LinearLayout>
