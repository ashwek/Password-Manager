<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
<RelativeLayout
    android:id="@+id/list_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="5dp"
    android:paddingTop="10dp"
    >
    <TextView
        android:id="@+id/textViewSitetv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Site Name:"
        android:textSize="20sp"
        android:textColor="#777070"
        android:padding="5dp"
        android:layout_margin="5dp"/>
    <TextView
        android:layout_toEndOf="@+id/textViewSitetv"
        android:id="@+id/textViewSite"
        android:layout_width="match_parent"
        android:textSize="20sp"
        android:textColor="#777070"
        android:layout_height="wrap_content"
        android:text="Site Name"
        android:padding="5dp"
        android:layout_margin="5dp"/>
    <TextView
        android:id="@+id/textViewUserNametv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="User Name:"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:textColor="#777070"
        android:layout_below="@+id/textViewSite"/>

    <TextView
        android:id="@+id/textViewUserName"
        android:layout_toEndOf="@+id/textViewUserNametv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#777070"
        android:text="User Name"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:layout_below="@+id/textViewSite"/>
    <View
        android:background="@color/grey"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="15dp"
        android:layout_below="@+id/textViewUserName"
        android:layout_height="2dp"
        android:layout_width="match_parent"
        android:padding="5dp"/>

</RelativeLayout>
    </androidx.cardview.widget.CardView>
